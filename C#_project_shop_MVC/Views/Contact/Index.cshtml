@model project_shop_MVC.Models.GenreViewModel

@{
    ViewData["Title"] = "Contact";
}

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>


<style>
   .address-section {
      background-color: #f2f2f2;
      padding: 10px; 
      border-radius: 5px; 
   }
</style>


<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 offset-md-3">
            <h1>Contact Us</h1>
            <p>If you have any questions, feel free to reach out to us.</p>

            <address>
                <strong>Company Name</strong><br>
                123 Main Street<br>
                Cityville, Country<br>
                <abbr title="Phone">P:</abbr> (123) 456-7890
            </address>

            <div class="address-section">
                <address>
                    <i class="fas fa-envelope"></i> Email: info@example.com
                </address>
            </div>

            <p>@Html.BootstrapButtonWithIcon("Click me", "fas fa-check", "btn-success")</p>

            <p>@Html.DisplayShoeMessage(Model.TotalShoes)</p>
        </div>
    </div>
</div>